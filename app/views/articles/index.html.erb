<h1>List of Articles</h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @articles.each do |article| %>
            <tr>
                <th><%= article.title %></th>
                <th><%= article.description %></th>
                <th><%= link_to 'Show', article_path(article.id) %></th>
                <th><%= link_to 'Edit', edit_article_path(article.id) %></th>
                <th><%= link_to 'Delete', article_path(article.id), method: :delete %></th>
            </tr>
        <% end %>
    </tbody>


</table>



